<div class="container my-5">
  <h2 class="text-center mb-4">User Information</h2>

  <div class="card mb-3">
    <div class="card-body">
      <form action="/edit/<%= data.rows.id %>/repair" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">User:</label>
          <input
            name="username"
            type="text"
            id="username"
            class="form-control"
            value="<%= data.rows.username %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="fullname" class="form-label"
            ><strong>Full Name:</strong></label
          >
          <input
            name="fullname"
            type="text"
            id="fullname"
            class="form-control"
            value="<%= data.rows.fullname %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="address" class="form-label"
            ><strong>Address:</strong></label
          >
          <input
            name="address"
            type="text"
            id="address"
            class="form-control"
            value="<%= data.rows.address %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="sex" class="form-label"><strong>Sex:</strong></label>
          <input
            name="sex"
            type="text"
            id="sex"
            class="form-control"
            value="<%= data.rows.sex %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label"><strong>Email:</strong></label>
          <input
            name="email"
            type="email"
            id="email"
            class="form-control"
            value="<%= data.rows.email %>"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </div>
</div>
